{
  "properties": {
    "displayName":"Create VM using Managed Disk",
    "description":"Create VM using Managed Disk",
    "policyRule": {
      "if": {
        "anyOf": [
          {
            "allOf": [
              {
                "field": "type",
                "equals": "Microsoft.Compute/disks"
              },
              {
                "anyOf": [
                  {
                    "field": "Microsoft.Compute/disks/sku.name",
                    "contains": "Premium"
                  },
                  {
                    "field": "Microsoft.Compute/disks/sku.name",
                    "contains": "ZRS"
                  },
                  {
                    "allOf": [
                      {
                        "field": "Microsoft.Compute/disks/diskSizeGB",
                        "exists": true
                      },
                      {
                        "field": "Microsoft.Compute/disks/diskSizeGB",
                        "greaterOrEquals": 256
                      }
                    ]
                  }
                ]
              }
            ]
          },
          {
            "allOf": [
              {
                "field": "type",
                "equals": "Microsoft.Compute/virtualMachines"
              },
              {
                "anyOf": [
                  {
                    "field": "Microsoft.Compute/virtualMachines/storageProfile.osDisk.managedDisk.storageAccountType",
                    "contains": "Premium"
                  },
                  {
                    "field": "Microsoft.Compute/virtualMachines/storageProfile.osDisk.managedDisk.storageAccountType",
                    "contains": "ZRS"
                  },
                  {
                    "allOf": [
                      {
                        "field": "Microsoft.Compute/virtualMachines/storageProfile.osDisk.diskSizeGB",
                        "exists": true
                      },
                      {
                        "field": "Microsoft.Compute/virtualMachines/storageProfile.osDisk.diskSizeGB",
                        "greaterOrEquals": 256
                      }
                    ]
                  }
                ]
              }
            ]
          }
        ]
      },
      "then": {
        "effect": "deny"
      }
    }
  }
}
